// Function to find the largest of three integers
function max_of_three(a, b, c) {
    return Math.max(a, b, c);
}

// Sample usage
console.log(max_of_three(1, 0, 1));       // Output: 1
console.log(max_of_three(0, -10, -20));   // Output: 0
console.log(max_of_three(1000, 510, 440)); // Output: 1000
